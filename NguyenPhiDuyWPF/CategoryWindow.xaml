<Window x:Class="NguyenPhiDuyWPF.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category Form" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0 0 0 10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtName" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0 0 0 10" Grid.Row="1">
            <TextBlock Text="Description:"/>
            <TextBox x:Name="txtDescription" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Image x:Name="imgPreview" Width="100" Height="100" Margin="0 0 10 0" />
            <Button Content="Ch?n ?nh" Click="BtnSelectImage_Click"/>
        </StackPanel>

        <Button Content="L?u" Grid.Row="3" Width="80" HorizontalAlignment="Right" Click="BtnSave_Click"/>
    </Grid>
</Window>
